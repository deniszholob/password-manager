{
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 100],
  "explorer.sortOrderLexicographicOptions": "lower", // Case sensitive file ordering in tree
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.folders.associations": {
    "web": "client",
    "web-e2e": "test",
    "electron": "client",
    "options": "config",
    "directives": "components",
    "enums": "mjml",
    "models": "mjml",
    "forms": "docs",
    "wrappers": "hook",
    "document": "",
    "workflows": "github",
    "formly": "scala"
  },
  "material-icon-theme.files.associations": {
    "*.interceptor.ts": "apollo",
    "*.events.ts": "tcl",
    "*.data.ts": "database",
    "*.model.ts": "mjml",
    "*.enum.ts": "database",
    "*.const.ts": "database",
    "model.ts": "mjml",
    "index.ts": "url",
    "public-api.ts": "url",
    "models.ts": "url",
    "services.ts": "url"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/apps/web-e2e": true,
    "**/apps/**/.browserslistrc": true,
    "**/apps/**/assets": true,
    "**/apps/**/environments": true,
    "**/apps/electron/src/app/options/": true,
    "**/apps/electron/src/app/api/api*": true,
    "**/apps/electron/src/app/events/squirrel*": true,
    "**/apps/electron/src/app/events/update*": true,
    "**/apps/electron/src/app/constants.ts": true,
    "**/apps/web/src/main.ts": true,
    "**/apps/web/src/favicon*": true,
    "**/apps/*/README.md": true,
    "**/libs/*/README.md": true,
    "**/polyfills.ts": true,
    "**/test-setup*": true,
    "**/.eslint*": true,
    "**/jest*": true,
    "**/tsconfig*": true,
    "**/coverage/": true,
    "**/dist/": true,
    "**/screenshots/": true,
    "**/tools/": true,
    "**/.editorconfig": true,
    "**/.gitignore": true,
    "**/.gitkeep": true,
    "**/.npmrc": true,
    "**/.prettierignore": true,
    "**/.prettierrc": true,
    "**/decorate-angular-cli.js": true,
    "**/FUNDING.yml": true,
    "**/LICENSE": true,
    "**/readme-nx.md": true,
    "**/node_modules": true
  },
  "cSpell.words": [
    "contenteditable",
    "devkit",
    "exitzero",
    "fontawesome",
    "FORMLY",
    "ngcc",
    "nrwl",
    "statvoo",
    "tailwindcss"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svg.preview.background": "transparent"
}
